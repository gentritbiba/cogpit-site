---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Cogpit â€” See inside your Claude Code sessions",
  description = "Open-source dashboard for observing, understanding, and controlling Claude Code agent sessions in real-time.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/cogpit.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <!-- Nav -->
    <nav class="fixed top-0 z-50 w-full border-b border-border/50 bg-background/80 backdrop-blur-xl">
      <div class="mx-auto flex h-14 max-w-6xl items-center justify-between px-6">
        <a href="/" class="flex items-center gap-2.5">
          <img src="/cogpit.svg" alt="Cogpit" class="h-7 w-7" />
          <span class="text-lg font-semibold tracking-tight">Cogpit</span>
        </a>
        <div class="hidden items-center gap-6 text-sm text-muted-foreground md:flex">
          <a href="/#features" class="transition-colors hover:text-foreground">Features</a>
          <a href="/#demo" class="transition-colors hover:text-foreground">Demo</a>
          <a href="/teams" class="transition-colors hover:text-foreground">Teams</a>
          <a href="/branching" class="transition-colors hover:text-foreground">Branching</a>
          <a href="/network" class="transition-colors hover:text-foreground">Network</a>
          <a href="/#get-started" class="transition-colors hover:text-foreground">Get Started</a>
        </div>
        <a
          href="https://github.com/gentritbiba/cogpit"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 rounded-lg border border-border bg-secondary px-3.5 py-1.5 text-sm font-medium transition-colors hover:bg-zinc-700"
        >
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          GitHub
        </a>
      </div>
    </nav>

    <!-- Main content -->
    <main class="pt-14">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-border/50 bg-background">
      <div class="mx-auto flex max-w-6xl flex-col items-center gap-4 px-6 py-12 text-sm text-muted-foreground md:flex-row md:justify-between">
        <div class="flex items-center gap-2">
          <img src="/cogpit.svg" alt="Cogpit" class="h-5 w-5 opacity-60" />
          <span>Built for Claude Code developers</span>
        </div>
        <div class="flex items-center gap-4">
          <span class="inline-flex items-center gap-1.5 rounded-full border border-border px-2.5 py-0.5 text-xs">
            MIT License
          </span>
          <a
            href="https://github.com/gentritbiba/cogpit"
            target="_blank"
            rel="noopener noreferrer"
            class="transition-colors hover:text-foreground"
          >
            GitHub
          </a>
          <span>&copy; {new Date().getFullYear()} Gentrit Biba</span>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
